<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MayazucMediaPlayer.Controls.MediaPlayerRenderingElement2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MayazucMediaPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition x:Name="TransportControlsRow" Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Stretch" Grid.RowSpan="2" Stretch="None" VerticalAlignment="Stretch"  x:Name="FrameServerImage"></Image>
        <Image HorizontalAlignment="Stretch" Stretch="None" VerticalAlignment="Stretch"  x:Name="SubtitleImage"></Image>
        <Image HorizontalAlignment="Stretch" Grid.RowSpan="2" VerticalAlignment="Stretch" x:Name="PosterImageImage"/>
        <Grid x:Name="TransportControlsContainer" Grid.Row="1">
            <local:CustomMediaTransportControls2 x:Name="MediaTransportControls"></local:CustomMediaTransportControls2>
        </Grid>
    </Grid>
</UserControl>
